<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Add permission for internet access -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Add permission for reading external storage -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Vehicle"
        tools:targetApi="31">

        <!-- HomeActivity set as launcher activity -->
        <activity
            android:name=".HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- LoginActivity declaration -->
        <activity
            android:name=".LoginActivity"
            android:exported="true" />

        <!-- RegisterActivity declaration -->
        <activity
            android:name=".RegisterActivity"
            android:exported="true" />

        <!-- MainActivity declaration -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <!-- AddVehicleActivity declaration -->
        <activity
            android:name=".AddVehicleActivity"
            android:exported="true" />

    </application>

</manifest>
