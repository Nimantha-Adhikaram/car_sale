<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/rounded_box_background"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <ImageView
        android:id="@+id/vehicleImageView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/car" />

    <TextView
        android:id="@+id/vehicleNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vehicle Name"
        android:textStyle="bold"
        android:paddingTop="4dp"
        android:paddingBottom="2dp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/vehiclePriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:paddingBottom="2dp"
        android:textColor="#FF5722" />

    <TextView
        android:id="@+id/vehicleFuelTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fuel Type"
        android:paddingBottom="2dp"
        android:textColor="#757575" />

    <TextView
        android:id="@+id/vehicleCityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City"
        android:paddingBottom="2dp"
        android:textColor="#757575" />

    <TextView
        android:id="@+id/vehicleMakeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make"
        android:paddingBottom="2dp"
        android:textColor="#757575" />

    <TextView
        android:id="@+id/vehicleAdDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ad Date"
        android:paddingBottom="2dp"
        android:textColor="#757575" />

</LinearLayout>
